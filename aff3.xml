<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/n3etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="131dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n3etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/n3etoile1"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n3etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n3etoile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="43dp"
            android:layout_toEndOf="@+id/n3etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n3etoile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/n3etoile4"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/bouttonn3"
            android:layout_below="@+id/toolbar"
            android:text="Niveau 3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/questionn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n3"
            android:layout_marginEnd="45dp"
            android:layout_toStartOf="@+id/n3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ecrivez le nom du champ lexical qui correspond Ã  ses mots." />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@+id/questionn3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_red_light"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <EditText
            android:id="@+id/repn3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/toolbar2"
            android:layout_centerHorizontal="true"
            android:hint="Ecrire ici"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bouttonn3"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/colorPrimaryDark"
            android:text="Valider" />

        <TextView
            android:id="@+id/mot1n3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mot3n3"
            android:layout_alignStart="@+id/toolbar2"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot2n3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mot1n3"
            android:layout_alignStart="@+id/mot1n3"
            android:layout_marginBottom="14dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot3n3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bouttonn3"
            android:layout_alignBottom="@+id/bouttonn3"
            android:layout_alignStart="@+id/mot1n3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot4n3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/toolbar2"
            android:layout_below="@+id/toolbar2"
            android:layout_marginTop="13dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot5n3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot4n3"
            android:layout_alignBottom="@+id/mot4n3"
            android:layout_alignEnd="@+id/toolbar2"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot6n3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot2n3"
            android:layout_alignBottom="@+id/mot2n3"
            android:layout_alignStart="@+id/mot7n3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot7n3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot1n3"
            android:layout_alignBottom="@+id/mot1n3"
            android:layout_alignStart="@+id/mot8n3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot8n3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot3n3"
            android:layout_alignBottom="@+id/mot3n3"
            android:layout_alignStart="@+id/mot5n3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>