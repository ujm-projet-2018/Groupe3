<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/n5etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignEnd="@+id/toolbar2"
            android:layout_marginEnd="40dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n5etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignEnd="@+id/n5etoile1"
            android:layout_marginEnd="75dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n5etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignStart="@+id/toolbar2"
            android:layout_marginStart="53dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/n5etoile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignEnd="@+id/rep1n5"
            android:layout_marginEnd="25dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/bouttonn5"
            android:layout_below="@+id/toolbar"
            android:text="Niveau 5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/questionn5"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Trouver l'intrus !"
            android:visibility="visible" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@+id/questionn5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_red_light"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <Button
            android:id="@+id/bouttonn5"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/colorPrimaryDark"
            android:text="Valider" />

        <RadioButton
            android:id="@+id/rep1n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/toolbar2"
            android:layout_below="@+id/toolbar2"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rep2n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/rep1n5"
            android:layout_below="@+id/rep1n5"
            android:layout_marginTop="11dp"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rep3n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_above="@+id/bouttonn5"
            android:layout_alignStart="@+id/rep2n5"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rep4n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/toolbar2"
            android:layout_below="@+id/toolbar2"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rep5n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_alignBaseline="@+id/rep2n5"
            android:layout_alignBottom="@+id/rep2n5"
            android:layout_alignStart="@+id/rep4n5"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rep6n5"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:layout_alignBaseline="@+id/rep3n5"
            android:layout_alignBottom="@+id/rep3n5"
            android:layout_alignStart="@+id/rep5n5"
            android:background="@android:color/darker_gray" />


    </RelativeLayout>

</LinearLayout>