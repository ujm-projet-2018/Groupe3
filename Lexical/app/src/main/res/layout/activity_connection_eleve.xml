<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EBE7DE"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Connexion"
        android:textColor="#E54C44"
        android:textSize="30dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/identifiantEleve"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:hint="PrÃ©nom"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/passEleve"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:hint="Nom de famille"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/seConnecter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Se connecter"
        android:textColor="#EBE7DE"
        android:textStyle="bold"
        android:background="#E54C44"
        />

</LinearLayout>