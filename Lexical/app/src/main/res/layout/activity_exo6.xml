<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple" />


        <ImageView
            android:id="@+id/etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignStart="@+id/mot4"
            app:srcCompat="@android:drawable/btn_star_big_off" />


        <ImageView
            android:id="@+id/etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="179dp"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoileON1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignStart="@+id/mot4"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/etoileON2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="179dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/n6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/valider"
            android:layout_below="@+id/toolbar"
            android:text="Niveau 6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/n6"
            android:layout_alignBottom="@+id/n6"
            android:inputType="textPersonName"
            android:text="Trouver l'intrus et donner le champs lexical qui appartient à ces mots"
            android:textSize="15dp" />

        <Button
            android:id="@+id/valider"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:text="Valider" />

        <TextView
            android:id="@+id/mot1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar2"
            android:layout_marginTop="18dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mot1"
            android:layout_below="@+id/mot1"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mot2"
            android:layout_below="@+id/mot2"
            android:layout_marginTop="14dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot1"
            android:layout_alignBottom="@+id/mot1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/mot1"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mot4"
            android:layout_below="@+id/mot4"
            android:layout_marginTop="14dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mot5"
            android:layout_below="@+id/mot5"
            android:layout_marginTop="14dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ0"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toolbar2"
            android:layout_alignBottom="@+id/toolbar2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/toolbar2"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/champ0"
            android:layout_below="@+id/champ0"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/champ1"
            android:layout_below="@+id/champ1"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/champ2"
            android:layout_below="@+id/champ2"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/champ3"
            android:layout_below="@+id/champ3"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="316dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/nom_champ"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/rep1"
            android:layout_below="@+id/question"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_blue_bright"
            android:hint="déplacer le champ ici"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/rep1"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/question"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/intrus"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/intrus"
            android:layout_width="60sp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/valider"
            android:layout_alignBottom="@+id/valider"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="intrus :"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/repintrus"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/intrus"
            android:layout_alignBottom="@+id/intrus"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/intrus"
            android:background="@android:color/holo_blue_bright"
            android:hint="déplacer l'intrus ici"
            android:textAlignment="center"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/rep2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/valider"
            android:layout_alignStart="@+id/repintrus"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="invisible" />


    </RelativeLayout>

</LinearLayout>