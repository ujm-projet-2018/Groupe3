<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EBE7DE"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Ajouter un mot"
        android:textColor="#009BCB"
        android:textSize="30dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/motAjout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:hint="Mot"
        android:textSize="25dp"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/champAssoc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:hint="Champ lexical associÃ©"
        android:textSize="23dp"
        android:maxLines="1"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/classe_choix"
        android:prompt="@string/classe" />

    <Button
        android:id="@+id/ajouterMot"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Ajouter"
        android:textColor="#EBE7DE"
        android:textStyle="bold"
        android:background="#009BCB"
        android:onClick="onValidate"
        />





</LinearLayout>