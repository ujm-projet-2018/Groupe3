<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile2"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile4"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/valider"
            android:layout_below="@+id/toolbar"
            android:text="Niveau 4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/question"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/n4"
            android:layout_alignBottom="@+id/n4"
            android:textSize="15dp"
            android:text="Déplacez les étiquettes sur les champs lexicaux correspondant " />

        <Button
            android:id="@+id/valider"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/colorPrimaryDark"
            android:text="Valider" />

        <TextView
            android:id="@+id/mot1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/champ1"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/mot1"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep1"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />


        <TextView
            android:id="@+id/mot3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot2"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot3"
            android:layout_marginTop="13dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rep2"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep2"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot5"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep2"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot6"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep2"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot7"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep2"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rep3"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot10"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot9"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot11"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot10"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot12"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot11"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/rep3"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/rep3"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/champ1"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/champ1"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/champ2"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/champ1"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/champ3"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/champ1"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/champ4"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/champ1"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/rep1"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:background="@android:color/holo_blue_bright"
            android:hint="ICI"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rep2"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/rep1"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/rep1"
            android:background="@android:color/holo_blue_bright"
            android:hint="ICI"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rep3"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/rep2"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/rep2"
            android:background="@android:color/holo_blue_bright"
            android:hint="ICI"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>