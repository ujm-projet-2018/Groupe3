<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple" />

        <ImageView
            android:id="@+id/etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile2"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile4"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoileON1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile2"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/etoileON3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile4"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/valider"
            android:layout_below="@+id/toolbar"
            android:text="Niveau 3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/question"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/n3"
            android:layout_alignBottom="@+id/n3"
            android:textSize="15dp"
            android:text="Déplacez le nom du champ lexical qui correspond à ses mots." />

        <Button
            android:id="@+id/valider"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:text="Valider" />

        <TextView
            android:id="@+id/mot1"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot2"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mot1"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/question"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mot2"
            android:layout_alignStart="@+id/mot1"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot4"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mot3"
            android:layout_alignStart="@+id/mot1"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot5"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mot4"
            android:layout_alignStart="@+id/mot1"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />


        <TextView
            android:id="@+id/champ1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etoile3"
            android:layout_below="@+id/mot1"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/champ1"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@+id/champ1"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/champ2"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@+id/champ2"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/champ3"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@+id/champ3"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/rep"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/valider"
            android:layout_alignBottom="@+id/valider"
            android:textSize="15dp"
            android:text="champ : " />

        <EditText
            android:id="@+id/repintrus"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="88dp"
            android:background="@android:color/holo_blue_bright"
            android:textSize="14sp"
            android:typeface="serif"
            android:hint="déplacer le champ ici"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/champ"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="88dp"
            android:background="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>