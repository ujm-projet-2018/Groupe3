<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_purple" />

        <ImageView
            android:id="@+id/etoile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile2"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile4"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/etoileON1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile2"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toStartOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/etoileON3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile3"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/etoileON5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/etoile4"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/toolbar"
            android:text="Nv 2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/n2"
            android:layout_alignBottom="@+id/n2"
            android:textSize="15dp"
            android:focusableInTouchMode="false"
            android:text="Déplacez les mots dans les champs lexicaux correspondant" />

        <Button
            android:id="@+id/valider"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:text="Valider" />

        <TextView
            android:id="@+id/mot1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot1"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot2"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot3"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot4"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot5"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot6"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mot8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mot7"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/champ1"
            android:layout_alignBottom="@+id/champ1"
            android:layout_alignStart="@+id/etoile4"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/champ1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mot1"
            android:layout_alignBottom="@+id/mot1"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/etoile1"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/rep1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/champ1"
            android:layout_below="@+id/champ1"
            android:background="@android:color/holo_blue_bright"
            android:focusableInTouchMode="false"
            android:hint="zone de déplacement"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rep2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/champ2"
            android:layout_below="@+id/champ2"
            android:background="@android:color/holo_blue_bright"
            android:focusableInTouchMode="false"
            android:hint="zone de déplacement"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>